<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".Activity.StepDataActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/mainlayoutstep"
        >
    <RadioGroup
        android:id="@+id/radioGroup1"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="8dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/radio_activity"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:gravity="center"
android:layout_marginHorizontal="20dp"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Activity" />

        <RadioButton
            android:layout_marginHorizontal="20dp"
            android:id="@+id/radio_Sleep"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="Sleep" />
    </RadioGroup>



    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:id="@+id/RecyclerView_detailData"
        android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        >
        <Button
            android:layout_width="match_parent"
            android:text="Read"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:layout_marginHorizontal="20dp"
            android:id="@+id/bt_readData"
            android:layout_height="wrap_content" />
        <Button
            android:layout_width="match_parent"
            android:text="Clear All"
            android:textAllCaps="false"
            android:id="@+id/bt_DeleteData"
            android:layout_weight="1"
            android:layout_marginHorizontal="20dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>